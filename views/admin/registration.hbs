<h3>{{viewTitle}}</h3>

<form action="/admin/registrationsub" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{registration._id}}">

    <div class="form-group">
        <label>Property Name</label>
        <input type="text" class="form-control" name="propertyName" placeholder="Property Name" value="{{registration.propertyName}}">
        <div class="text-danger">{{registration.propertyNameError}}</div>
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{registration.address}}">
        <div class="text-danger">{{registration.addressError}}</div>
    </div>

    <div class="form-group">
        <label>Mobile Number</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{registration.mobile}}">
        <div class="text-danger">{{registration.mobileError}}</div>
    </div>

    <div class="form-group">
        <label>Alternate Mobile</label>
        <input type="text" class="form-control" name="alternateMobile" placeholder="Alternate Mobile" value="{{registration.alternateMobile}}">
    </div>

    <div class="form-group">
        <label>Email ID</label>
        <input type="email" class="form-control" name="email" placeholder="Email" value="{{registration.email}}">
        <div class="text-danger">{{registration.emailError}}</div>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" name="description" placeholder="Description">{{registration.description}}</textarea>
    </div>

    <div class="form-group">
        <label>Annual Income</label>
        <input type="number" class="form-control" name="AnnualIncome" placeholder="Annual Income" value="{{registration.annualIncome}}">
        <div class="text-danger">{{registration.annualIncomeError}}</div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/admin/home/registrationlist">View Records</a>
    </div>
</form>
