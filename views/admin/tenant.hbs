<h3>{{viewTitle}}</h3>

<form action="/admin/tenantsub" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{tenant._id}}">

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Email" value="{{tenant.email}}">
        <div class="text-danger">{{tenant.emailError}}</div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname" placeholder="First Name" value="{{tenant.firstname}}">
            <div class="text-danger">{{tenant.firstnameError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Middle Name</label>
            <input type="text" class="form-control" name="middlename" placeholder="Middle Name" value="{{tenant.middlename}}">
        </div>

        <div class="form-group col-md-6">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" placeholder="Last Name" value="{{tenant.lastname}}">
            <div class="text-danger">{{tenant.lastnameError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Date of Birth</label>
            <input type="date" class="form-control" name="dob" placeholder="Date of Birth" value="{{tenant.dob}}">
            <div class="text-danger">{{tenant.dobError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Phone Number</label>
            <input type="text" class="form-control" name="phonenumber" placeholder="Phone Number" value="{{tenant.phonenumber}}">
            <div class="text-danger">{{tenant.phonenumberError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Occupation</label>
            <input type="text" class="form-control" name="occupation" placeholder="Occupation" value="{{tenant.occupation}}">
            <div class="text-danger">{{tenant.occupationError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Annual Income</label>
            <input type="text" class="form-control" name="annualincome" placeholder="Annual Income" value="{{tenant.annualincome}}">
            <div class="text-danger">{{tenant.annualincomeError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>Address</label>
            <input type="text" class="form-control" name="address" placeholder="Address" value="{{tenant.address}}">
            <div class="text-danger">{{tenant.addressError}}</div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Save</button>
        <a class="btn btn-secondary" href="/admin/home/tenantlist">View Records</a>
    </div>
</form>
