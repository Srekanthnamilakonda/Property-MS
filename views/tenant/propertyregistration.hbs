<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Property Registration</title>
  <style>
    /* General reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      background-color: #f9f9f9;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      background-color: #ebf1ab;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      padding: 20px 30px;
      max-width: 500px;
      width: 100%;
    }

    h1 {
      text-align: center;
      margin-bottom: 40px;
      color: #ed0a0a;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      font-weight: bold;
      margin: 10px 0 5px;
    }

    input[type="text"],
    input[type="number"],
    input[type="tel"],
    input[type="email"],
    textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
    }

    textarea {
      resize: none;
    }

    input[type="submit"] {
      background-color: #53e33d;
      color: #37023c;
      border: none;
      border-radius: 5px;
      padding: 10px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover {
      background-color: #0cb300;
    }

    #employeeDetails,
    #unemployedDetails {
      display: none;
    }

    @media (max-width: 600px) {
      .container {
        padding: 15px 20px;
      }

      h1 {
        font-size: 24px;
      }

      input[type="text"],
      input[type="number"],
      textarea {
        font-size: 14px;
      }

      input[type="submit"] {
        font-size: 14px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Register a Property</h1>
    <form action="/tenant/registrationsub" method="POST">
      <label for="propertyName">Property Name:</label>
      <input type="text" id="propertyName" name="propertyName" required>

      <label for="propertyId">Property Id:</label>
      <input type="number" id="number" name="number" pattern="[0-9]{4}" maxlength="4">

      <label for="address">Primarily Residence Address:</label>
      <textarea id="address" name="address" rows="3" required></textarea>

      <label for="mobile">Mobile Number:</label>
      <input type="tel" id="mobile" name="mobile" pattern="[0-9]{10}" maxlength="10" required>

      <label for="mobileAlt">Alternate Mobile:</label>
      <input type="tel" id="mobileAlt" name="mobileAlt" pattern="[0-9]{10}" maxlength="10">

      <!-- Employment Status -->
      <label>Employment Status</label>
      <div>
        <input type="radio" id="employee" name="employmentStatus" value="employee" onclick="toggleEmploymentFields()">
        <label for="employee">Employee</label>
        <input type="radio" id="unemployed" name="employmentStatus" value="unemployed" onclick="toggleEmploymentFields()">
        <label for="unemployed">Unemployed</label>
      </div>

      <!-- Employee Details -->
      <div id="employeeDetails">
        <label for="companyName">Company Name:</label>
        <input type="text" id="companyName" name="companyName">

        <label for="workplace">Workplace:</label>
        <input type="text" id="workplace" name="workplace">

        <label for="workplacePhoneNumber">Workplace Phone Number:</label>
        <input type="tel" id="workplacePhoneNumber" name="workplacePhoneNumber" pattern="[0-9]{10}" maxlength="10">

        <label for="annualIncome">Annual Income:</label>
        <input type="number" id="annualIncome" name="annualIncome">
      </div>

      <!-- Unemployed Details -->
      <div id="unemployedDetails">
        <label>Unemployment Reason:</label>
        <div>
          <input type="radio" id="retired" name="unemploymentReason" value="retired">
          <label for="retired">Retired</label>
          <input type="radio" id="student" name="unemploymentReason" value="student">
          <label for="student">Student</label>
          <input type="radio" id="other" name="unemploymentReason" value="other">
          <label for="other">Other</label>
        </div>
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="3"></textarea>
      </div>

      <label for="email">Email Address:</label>
      <input type="email" id="email" name="email" required>

      <input type="submit" value="Register Property">
    </form>
  </div>

  <script>
    function toggleEmploymentFields() {
      const isEmployee = document.getElementById("employee").checked;
      const isUnemployed = document.getElementById("unemployed").checked;

      document.getElementById("employeeDetails").style.display = isEmployee ? "block" : "none";
      document.getElementById("unemployedDetails").style.display = isUnemployed ? "block" : "none";
    }
  </script>
</body>

</html>
